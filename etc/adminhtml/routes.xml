<?xml version="1.0"?>
<!-- регистрируем маршурт brituy_simpleblog (внутренний идентификатор) с именем brituy_simpleblog (видимый идентификатор, часть URL'а) -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:App/etc/routes.xsd">
    <router id="admin">
        <route id="brituy_simpleblog" frontName="brituy_simpleblog">
            <module name="Brituy_SimpleBlog"/>
        </route>
    </router>
</config>
